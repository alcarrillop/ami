{
  "name": "ami-assistant",
  "version": "1.0.0",
  "description": "Asistente virtual empático para recolección de documentos inmobiliarios desarrollado en n8n",
  "main": "index.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:load": "artillery run test/load/ami-load-test.yml",
    "lint": "eslint . --ext .js,.json",
    "lint:fix": "eslint . --ext .js,.json --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run lint && npm run test && npm run format:check",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "workflow:import": "node scripts/import-workflow.js",
    "workflow:export": "node scripts/export-workflow.js",
    "workflow:validate": "node scripts/validate-workflow.js",
    "setup": "node scripts/setup.js",
    "setup:dev": "npm run setup && npm run db:reset",
    "deploy:dev": "node scripts/deploy-dev.js",
    "deploy:staging": "node scripts/deploy-staging.js",
    "health-check": "node scripts/health-check.js",
    "logs": "node scripts/logs.js",
    "backup": "node scripts/backup.js",
    "restore": "node scripts/restore.js"
  },
  "keywords": [
    "n8n",
    "chatbot",
    "document-validation",
    "real-estate",
    "assistant",
    "habi",
    "automation",
    "mcp",
    "webhook"
  ],
  "author": {
    "name": "Habi Tech Team",
    "email": "tech@habi.co",
    "url": "https://habi.co"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/habi/ami-assistant.git"
  },
  "bugs": {
    "url": "https://github.com/habi/ami-assistant/issues"
  },
  "homepage": "https://github.com/habi/ami-assistant#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "artillery": "^2.0.3",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "scripts/**/*.js",
      "!src/test/**",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/test/**/*.test.js",
      "**/test/**/*.spec.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "plugins": [
      "jest"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "no-var": "error",
      "object-shorthand": "error",
      "prefer-arrow-callback": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false
  },
  "config": {
    "n8n": {
      "version": "^1.15.0",
      "workflow_path": "./workflows"
    },
    "database": {
      "type": "postgresql",
      "migrations_path": "./database/migrations"
    },
    "mcp": {
      "timeout": 30000,
      "retries": 3
    }
  },
  "funding": {
    "type": "corporate",
    "url": "https://habi.co"
  },
  "private": false,
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ]
}
